# Maintainer: Kohei Suzuki <eagletmt@gmail.com>
pkgname=fastladder-bookwalker
pkgver=0.1.1
pkgrel=1
arch=('i686' 'x86_64')
url='https://github.com/eagletmt/fastladder-bookwalker'
license=('MIT')
depends=('openssl')
makedepends=('cargo')
source=("https://github.com/eagletmt/$pkgname/archive/v$pkgver.tar.gz")

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}
package() {
  cd "$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin"
  install -m755 target/release/$pkgname "$pkgdir/usr/bin/"
}

sha512sums=('1b550384df50df38937fe7e695e063947debb3054a0739069d900546965cbb62fd45d3c4aefcb62e00dae90ae5235a8f924f2855ee803e4356066cd5fc4c0b53')
