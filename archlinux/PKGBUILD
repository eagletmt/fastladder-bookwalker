# Maintainer: Kohei Suzuki <eagletmt@gmail.com>
pkgname=fastladder-bookwalker
pkgver=0.1.2
pkgrel=1
arch=('i686' 'x86_64')
url='https://github.com/eagletmt/fastladder-bookwalker'
license=('MIT')
depends=('gcc-libs')
makedepends=('cargo')
source=("https://github.com/eagletmt/$pkgname/archive/v$pkgver.tar.gz")

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}
package() {
  cd "$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin"
  install -m755 target/release/$pkgname "$pkgdir/usr/bin/"
}

sha512sums=('a4d5f1b6857be03d42ba48b0db249896cf7131da4fe4b94d6e44b1735dd6542fe292799dee37bbdd5a4606a09b50976bc8096f349440878b7ecfe641e4822216')
