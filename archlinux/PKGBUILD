# Maintainer: Kohei Suzuki <eagletmt@gmail.com>
pkgname=fastladder-bookwalker
pkgver=0.1.0
pkgrel=1
arch=('i686' 'x86_64')
url='https://github.com/eagletmt/fastladder-bookwalker'
license=('MIT')
depends=('openssl')
makedepends=('cargo')
source=("https://github.com/eagletmt/$pkgname/archive/v$pkgver.tar.gz")

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}
package() {
  cd "$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin"
  install -m755 target/release/$pkgname "$pkgdir/usr/bin/"
}

sha512sums=('2ab0962ceefe842e52f318359da20d015ca381d84f4e8ec2e99a17dda86d80de807d8144035ba19aad11aa7e49f29d40f213802ba281f604e614ecfdbd483cec')
